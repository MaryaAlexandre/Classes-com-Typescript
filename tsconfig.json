{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "commonjs",                     
    "rootDir": "./src",                       
    "outDir": "./dist",                       
    "strict": true,                          
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",               
    "sourceMap": true                         
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
